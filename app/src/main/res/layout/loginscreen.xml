<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

        <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                android:src="@drawable/logo"/>

        <EditText
                android:layout_width="346dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:inputType="textEmailAddress"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/baseline_email_white_24dp"
                android:hint="E-mail"
                android:drawableStart="@drawable/baseline_email_white_24dp"
                android:maxLines="1"
                android:ems="10"
                android:id="@+id/username"
                android:padding="8dp"
                android:textColorHint="#FFF"/>
        <EditText
                android:layout_width="346dp"
                android:layout_height="53dp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_lock_white_24dp"
                android:drawableStart="@drawable/baseline_lock_white_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:id="@+id/password"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#FFF"
                android:hint="Password"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="Log In"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_login"
                android:padding="16dp"
                android:textAllCaps="false"
                android:textColor="@color/startRed"
                android:textSize="18sp"
                android:id="@+id/loginButton"/>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="Sign Up"
                android:id="@+id/loginSignUp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_login"
                android:padding="16dp"
                android:textAllCaps="false"
                android:textColor="@color/startRed"
                android:textSize="18sp"/>
        <TextView
                android:layout_width="165dp"
                android:layout_height="27dp"
                android:id="@+id/textView"
                tools:text="@string/signUp"
                app:layout_constraintTop_toBottomOf="@+id/loginButton"
                android:textAlignment="center"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:text="@string/signUp"
                android:textColor="#FFF"/>

    </LinearLayout>
</RelativeLayout>